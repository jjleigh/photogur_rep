<div class="row">
	<div class="large-6 medium-centered columns">
		<div class="new-edit-form">
			<h1>Add a picture</h1>
			<hr>


		
			<%= form_for @picture do |f|%>
				
			  <% if @picture.errors.any? %>
			    <div class="error_messages">
			      <h2>Form is invalid</h2>
			      <ul>
			        <% for message in @picture.errors.full_messages %>
			          <li><%= message %></li>
			        <% end %>
			      </ul>
			    </div>
			  <% end %>
				<div class="field">
					<%= f.label :name %><br>
					<%= f.text_field :name %>
				</div>

				<div class="field">
					<%= f.label :email %><br>
					<%= f.text_field :email %>
				</div>

				<div class="field">
					<%= f.label :password %><br>
					<%= f.text_field :password %>
				</div>
				<div class="field">
    			<%= f.label :password_confirmation %><br/>
    			<%= f.password_field :password_confirmation %>
  			</div>
				<div class="field">
					<%= f.submit "save" %>
				</div>
			<% end %>
		</div>
		
	</div>
</div>
