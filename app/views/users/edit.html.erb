  <div class="row">
    
    <div class="large-12 columns">
      <div class="new-edit-form">
        <h1 class="text-center user-head">Edit account</h1>
      </div>
    </div>
    <%= form_for @user do |f|%>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div class="field">
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </div>
    
    <div class="actions"><%= f.submit %></div>
  <% end %>
  </div>