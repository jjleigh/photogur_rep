 <div class="row">
    	<div class="large-12 small-centered columns">
				<h1 class="text-center index-head">Categories</h1>

    	</div>
    </div>


  <!-- Here the pictures begin -->
  <div class="row">
      
    <div class="large-12 columns">
      

      <div class="panel index-panel">
        <div class="row">
          <% @categories.each do |category| %>
             <div class="large-4 small-6 columns clearfix">
              <figure>
                <div class="blur-img">
                  <%= link_to image_tag(category.cat_image_url), category_path(category), :class => 'index-image' %>
                </div>
                
                <figcaption>
                    <h5><%= category.name %></h5>

                </figcaption>
              </figure>
          </div>
        <% end %>
      </div>
    
    </div>
  </div>
