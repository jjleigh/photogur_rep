	
 
<div class="row">

	<div class="large-12 large-centered columns">
		<h1 class="text-center index-head"><%= @picture[:title]%></h1>
		
	</div>
		
</div>

<div class="row">
	<div class="large-12 columns">
		<div class="row">
			
	
		<div class="large-10 large-centered columns">
			<%= image_tag @picture.url, :class => "image" %>

			<div class="panel show-panel">
      	<p>Artist: <%= @picture[:artist] %></p>
      	<!-- <p>Posted by: <%#= @picture_owner %></p> -->
      	<p>Category: <%= @category.name %></p>
      	<ul class="inline-list">
      		
          <li>
          	<% if current_user.id == @picture.user.id %>
          		<li><%= link_to "", edit_picture_path(@picture), :class =>"fa fa-pencil" %></li>
							<li><%= link_to "", @picture , :method => :delete, :class =>"fa fa-trash-o", data: {confirm: "Are you sure you want to delete your picture?"} %></li>
						<% else %>
							<p></p>
						<% end %>
					</li>     	
      	</ul>
				 
    	</div>
		</div>
	</div>
		
	</div>
</div>

<div>
	
	</div>
		<div class="row comments-panel">
			<div class="large-12 large-centered columns">

				<% if current_user %>
					<div class="row comments-header">
						<div class="large-12 large-centered columns">
							<h3 class="text-center">Comments</h3>
							<!-- <p class="text-center">Comments for <%#= @picture.title %></p> -->
						</div>
					</div>

					<% @picture.comments.each do |comment| %>
						<div class="row comments-container">
							<div class="large-12 columns">

								<div class="row">
									<div class="large-12 columns comment-info">
										<% if comment.user != nil %>
											<p id='commenter'><strong><%= comment.user.name %></strong> on <em><%= comment.created_at.strftime("%A, %B %d, %Y") %></em></p>
							
											<% if current_user.id == comment.user.id || current_user.id == @picture.user.id %>
												<p><%= link_to "", [comment.picture, comment], :method => :delete, :class =>"fa fa-trash-o" %></p>
											<% else %>
												<p></p>
											<% end %>
										<% end %>
									</div>	
								</div>

								<div class="row comment-text">
									<div class="large-11 columns">
										<p><%= comment.description %></p>
									</div>
								</div>
							

							</div>
						</div>

					<% end %>
				<% end %>

			<%if current_user %>
				<div class="row">
					<div class="large-12 columns">

						<div class="row">
							<div class="large-12 columns new-comment-header">
								<h3>New Comment</h3>
							</div>
						</div>
						

						<div class="row">
							<div class="large-11 columns new-comment-input">
								<%= form_for ([@picture, @comment]) do |f| %>
									<% if @comment.errors.any? %>
										<div id="error_explanation">
											<h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

				        			<ul>
				        				<% @review.errors.full_messages.each do |msg| %>
				          				<li><%= msg %></li>
				       					<% end %>
				        			</ul>
			      				</div>
			    				<% end %>
									<div class="picture-comment-form">
							    	<div class="field">
						      		<%= f.label :comment, :id => 'comment-label' %><br />
						      		<%= f.text_area :description %>
						    		</div>
						    		<div class="actions">
						      		<%= f.submit 'post', :class => 'button save-button' %>
						    		</div>
									</div>
			  				<% end %>
			  			</div>
		    		</div>

					</div>
		    </div>

			<% else %>
		  	<p>Please <%= link_to "log in", new_session_path %> to add a review.</p> 
			<% end %>


			</div>
		</div>


     