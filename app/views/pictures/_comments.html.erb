<% @picture.comments.each do |comment| %>
	<div class="row comments-container">
		<div class="large-12 columns">

			<div class="row">
				<div class="large-12 columns comment-info">
					<% if comment.user != nil %>
						<p id='commenter'><strong><%= comment.user.name %></strong> on <em><%= comment.created_at.strftime("%A, %B %d, %Y") %></em></p>
						<%if current_user %>
							<% if current_user.id == comment.user.id || current_user.id == @picture.user.id %>
								<p><%= link_to "", [comment.picture, comment], :method => :delete, :class =>"fa fa-trash-o" %></p>
							<% else %>
								<p></p>
							<% end %>
						<% else %>
							<p></p>
						<% end %>
					<% end %>
				</div>	
			</div>

			<div class="row comment-text">
				<div class="large-11 columns">
					<p><%= comment.description %></p>
				</div>
			</div>
		

		</div>
	</div>

<% end %>